{
    "compileOnSave": true,

    "compilerOptions": {
        "allowJs": true,
        "watch": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "skipLibCheck": true,
        "lib": [ "es2015", "dom" ],
        "types": [ "node" ]
    },

    "include": [
        "./**/*.ts"
    ]
}
